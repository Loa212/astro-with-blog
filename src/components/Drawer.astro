---
import { Close } from "../assets/icons";
import LoaLogo from "../assets/loalogo2.png";
import LanguageSwitcher from "./react/LanguageSwitcher";
// import ThemeSwitcher from "../components/react/ThemeSwitcher";

const navLinks = [
  { name: "Blog", href: "/blog" },
  { name: "Navbar Item 2", href: "#" },
];
---

<div class="drawer drawer-end">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div
      class="sticky inset-y-0 -top-0.5 z-50 w-full navbar bg-slate-100 dark:bg-slate-900 text-slate-700 dark:text-white border-b border-slate-700/20 dark:border-slate-100/10"
    >
      <div class="w-full max-w-7xl mx-auto">
        <a href="/" class="flex-1 px-2 flex items-center justify-start gap-2">
          <img class="h-8 w-8" src={LoaLogo} alt="loa-logo" />
          Loa212</a
        >
        <div class="flex-none lg:hidden">
          <label for="my-drawer-3" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-6 h-6 stroke-current"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
        </div>
        <div class="flex-none hidden lg:block">
          <ul class="menu menu-horizontal">
            <!-- Navbar menu content here -->
            {
              navLinks.map((link) => (
                <li class="underline underline-offset-4 decoration-1 hover:text-white hover:decoration-2 decoration-slate-400 hover:decoration-slate-200">
                  <a href={link.href}>{link.name}</a>
                </li>
              ))
            }

            <LanguageSwitcher client:load />

            <!-- <ThemeSwitcher /> -->
          </ul>
        </div>
      </div>
    </div>
    <!-- Page content here -->
    <div class="relative grow">
      <slot />
    </div>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-3" class="drawer-overlay"></label>
    <ul
      class="menu p-4 w-80 bg-slate-100 dark:bg-slate-800 text-slate-800 dark:text-slate-100"
    >
      <!-- Sidebar content here -->
      <div class="flex items-center justify-between">
        <LanguageSwitcher client:load />
        <label for="my-drawer-3" class="btn btn-square self-end">
          <Close size={28} />
        </label>
      </div>

      {
        navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
