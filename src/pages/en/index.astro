---
// import Hero from "../components/Hero.astro";
import Layout from "../../layouts/Layout.astro";
import person from "../../assets/FakihAmriAbdullah.png";
import WhatIDo from "./components/WhatIDo.astro";
---

<style>
  .loa-gradient-navbar {
    @apply bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500;
  }

  .loa-gradient-text {
    @apply bg-gradient-to-bl from-pink-600 via-red-600 to-yellow-500;
  }
</style>

<Layout title="Welcome - Loa212">
  <main class="bg-slate-100 dark:bg-slate-800">
    <div class="max-w-7xl mx-auto">
      <div class="lg:grid grid-cols-12 gap-8 px-4 py-2 lg:py-8 lg:px-0">
        <div class="lg:px-4 col-span-7">
          <h1
            class="text-5xl lg:text-6xl drop-shadow-md dark:text-slate-200 font-black py-4 tracking-wide text-transparent bg-clip-text loa-gradient-text"
          >
            Are you tired of all websites looking the same?
          </h1>
          <h3
            class="text-lg lg:text-2xl font-medium tracking-wide opacity-60 py-4 dark:text-slate-100 dark:opacity-80"
          >
            Most websites and mobile apps{" "}
            in{" "}
            {new Date().getFullYear().toString()} look the same.
          </h3>
          <h2
            class="text-xs lg:text-lg font-bold tracking-wide text-slate-600 dark:text-slate-300"
          >
            <span
              class="text-base lg:text-xl text-transparent bg-clip-text font-black loa-gradient-text"
            >
              Loa212
            </span>{" "}
            offers tailor made development of websites and{" "}
            <br class="hidden lg:block" /> mobile applications.
          </h2>
          <div class="py-8 w-full text-center lg:text-left">
            <button
              class="btn loa-gradient-navbar text-white underline underline-offset-2 hover:ring ring-red-500/40"
            >
              See offers</button
            >
          </div>
        </div>
        <div
          class="hidden lg:block relative mx-auto w-32 h-64 lg:w-[35vw] lg:h-[70vh] col-span-5"
        >
          <img src={person} alt="person using laptop" />
        </div>

        <div class="lg:hidden relative mx-auto w-[90vw] h-[50vh] col-span-5">
          <img src={person} alt="person using laptop" />
        </div>
      </div>
      <WhatIDo />
    </div>
    <!-- <Hero />
    <div class="h-screen bg-green-300"></div> -->
  </main>
</Layout>
